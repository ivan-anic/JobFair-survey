<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="@dimen/fragment_question_sideMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"
        android:text="@string/poll_header"
        android:id="@+id/textView_question"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <LinearLayout
        android:layout_margin="@dimen/fragment_question_sideMargin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:weightSum="1"
        android:paddingTop="60dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/number_one"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.11" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@android:color/transparent"
            android:src="@drawable/number_two"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:background="@android:color/transparent"
            android:src="@drawable/number_three"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:background="@android:color/transparent"
            android:src="@drawable/number_four"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:background="@android:color/transparent"
            android:src="@drawable/number_five"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"/>


    </LinearLayout>

</RelativeLayout>